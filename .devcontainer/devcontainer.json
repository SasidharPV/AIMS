{
  "name": "ADF Monitor Pro Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-toolsai.jupyter",
        "ms-vscode.azure-account",
        "ms-azuretools.vscode-azureresourcegroups",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "ADF Monitor Pro Web App",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pip install -r requirements_webapp.txt",
  "postStartCommand": "echo 'ADF Monitor Pro Environment Ready! Run: python startup.py webapp'",
  "remoteUser": "vscode"
}
