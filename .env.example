# Azure Data Factory Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_RESOURCE_GROUP=your_resource_group_here
AZURE_DATA_FACTORY_NAME=your_adf_name_here
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Monitoring Configuration
POLLING_INTERVAL_MINUTES=5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MINUTES=10

# Notification Configuration
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@company.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_TO=alerts@company.com

# Database Configuration
DATABASE_PATH=./adf_monitoring.db

# Log Configuration
LOG_LEVEL=INFO
LOG_FILE=./adf_monitor.log
